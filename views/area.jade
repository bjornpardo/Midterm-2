extends layout

block content
	div.area-mgmt-container 
		h1.header-text Area Management
		
		ul.nav.nav-pills#statuses
			li.active
				a.add(href='#') 
					i.fa.fa-plus-circle
					|  Add Area
					
			li
				a.edit(href='#') 
					i.fa.fa-pencil
					|  Delete Area
					
		div
			form.cForms#addArea(action="/area" method="post")		
				input(class="form-control input-lg search" type="text" name="name" placeholder="Add area/s here")
				button.btn.btn-default.btn-lg(type='submit') Add

			form.cForms#deleteArea.hidden(action="/area" method="post")		
				input(class="form-control input-lg search" type="text" name="name")
				button.btn.btn-default.btn-lg(type='submit') Delete