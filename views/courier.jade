extends layout

block content
	div.courier-mgmt-container 
		h1.header-text Courier Management
		
		ul.nav.nav-pills#statuses
			li.active
				a.add(href='#') 
					i.fa.fa-plus-circle
					|  Add Courier
					
			li
				a.edit(href='#') 
					i.fa.fa-pencil
					|  Edit Courier
					
		div
			form.cForms#add(action="/courier/create" method="post")		
				input(class="form-control input-lg search" type="text" name="name" value="Courier")
				input(class="form-control input-lg search" type="text" name="capableAreas" placeholder='Capabale Areas')
				input(class="form-control input-lg search" type="text" name="defaultAreas" placeholder='Default Areas')
				button.btn.btn-default.btn-lg(type='submit') Add

			form.cForms#edit.hidden(action="/courier/update" method="post")		
				select(class="form-control input-lg search courier-select" type="text" name="name")
					option Select courier
					for courier in couriers
						option #{courier.name}
				input(class="form-control input-lg search" type="text" name="capableAreasEdit")
				input(class="form-control input-lg search" type="text" name="defaultAreasEdit")
				button.btn.btn-default.btn-lg.save-btn(type='submit') Save

	script.
		var couriers = !{JSON.stringify(couriers)};
				