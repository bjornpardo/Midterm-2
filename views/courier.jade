extends layout

block content
	h1 Courier Management
	
	ul.nav.nav-pills#statuses
		li.active
			a.add(href='#') Add Courier
				
		li
			a.edit(href='#') Edit Courier
				
	div
		form.cForms#add(action="/courier" method="post")		
			input(class="form-control input-lg search" type="text" name="name" value="Courier")
			input(class="form-control input-lg search" type="text" name="capableAreas" placeholder='Capabale Areas')
			input(class="form-control input-lg search" type="text" name="defaultAreas" placeholder='Default Areas')
			button.btn.btn-default.btn-lg(type='submit') Add

		form.cForms#edit.hidden(action="/courier" method="post")		
			input(class="form-control input-lg search" type="text" name="name")
			input(class="form-control input-lg search" type="text" name="capableAreas" value="1,2")
			input(class="form-control input-lg search" type="text" name="defaultAreas")
			button.btn.btn-default.btn-lg(type='submit') Edit
				