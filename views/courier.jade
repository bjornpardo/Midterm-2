extends layout

block content
	div.courier-mgmt-container 
		h1.header-text Courier Management
		
		ul.nav.nav-pills#statuses
			li.active
				a.add(href='#') 
					i.fa.fa-plus-circle
					|  Add Courier
					
			li
				a.edit(href='#') 
					i.fa.fa-pencil
					|  Edit Courier
					
		div
			form.cForms#add(action="/courier" method="post")		
				input(class="form-control input-lg search" type="text" name="name" value="Courier")
				input(class="form-control input-lg search" type="text" name="capableAreas" placeholder='Capabale Areas')
				input(class="form-control input-lg search" type="text" name="defaultAreas" placeholder='Default Areas')
				button.btn.btn-default.btn-lg(type='submit') Add

			form.cForms#edit.hidden(action="/edit" method="post")		
				select(class="form-control input-lg search" type="text" name="name")
					for name in names
						option #{name.name}
				input(class="form-control input-lg search" type="text" name="capableAreas" value="1,2,3,4,5,6")
				input(class="form-control input-lg search" type="text" name="defaultAreas" value="1,2,3")
				button.btn.btn-default.btn-lg(type='submit') Save
				